        <Label Content="Damage Type" HorizontalAlignment="Left" Margin="157,155,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <TextBox x:Name="tb_dt" HorizontalAlignment="Left" Height="24" Margin="253,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
        <Label Content="CRIT ch." HorizontalAlignment="Left" Margin="157,185,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <TextBox x:Name="tb_critch" HorizontalAlignment="Left" Height="24" Margin="253,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
        <Label Content="CRIT DMG" HorizontalAlignment="Left" Margin="157,214,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <TextBox x:Name="tb_critdmg" HorizontalAlignment="Left" Height="24" Margin="253,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="299,157,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="113,188,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="299,188,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="299,217,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <Label Content="Skill" HorizontalAlignment="Left" Margin="335,157,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <TextBox x:Name="tb_skill" HorizontalAlignment="Left" Height="24" Margin="369,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="415,157,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
    </Grid>
